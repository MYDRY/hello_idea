<h1>Topics#new</h1>
<p>
  <% @topic.errors.full_messages.each do |message| %>
  <div class="alert-danger">
    <%= message %>
  </div>
  <% end %><br>
 
  <%= form_for(@topic) do |f| %>
      <%= f.label :genre_id %><br>
      <%= f.select :genre_id, [["理想",1], ["問題",2],["その他",3]] %><br>
      <%= f.label :title %><br>
      <%= f.text_field :title %><br>
      <%= f.label :body %><br>
      <%= f.text_area :body %><br>
      <%= f.submit %>
  <% end %>
</p>
