<div class="panel panel-success" style="margin: 10px 20px 10px">
  <div class="topic">
    <div class="panel-heading" style="background-color: #dff0d8">
      <%= topic.title %>
    </div>
    <div class="panel-body">
      <div class="well"><%= simple_format(topic.body) %></div>
      <%= link_to "アイデア新規投稿", new_topic_idea_path(topic_id: @topic), class: 'btn btn-default', style: 'color: black; background-color: khaki' %>
      <span class="fa fa-comment"><%= topic.ideas.count %></span>
      <div style="float: right;">
        <% if topic.user_id == current_user.id %>
          <%= link_to '編集', edit_topic_path(id: topic.id), class: 'btn btn-default', style: 'background-color: #dff0d8' %>
          <%= link_to '削除', topic_path(id: topic.id), method: :delete, class: 'btn btn-default', style: 'background-color: #dff0d8' %>
        <% end %>
      </div>
    </div>
    <div class="panel-footer">
      <%= render partial: 'ideas/simple', collection: @topic.ideas, as: 'idea' %>
    </div>
  </div>
</div>
