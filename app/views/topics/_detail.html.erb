<div class="panel panel-success" style="margin: 10px 20px 10px">
  <div class="topic">
    <div class="panel-heading" style="background-color: #00BABD">
      <div class="dtable">
        <div class="dtable_c">
          <%= link_to image_tag(get_image(topic.user), size: '150', class: 'img-thumbnail'), user_path(id: topic.user) %>
        </div>
        <div class="dtable_c" style="padding-left: 50px;">
          <ul>
            <li style="font-size: 20px;"><%= link_to topic.user.name, user_path(id: topic.user), style: 'color: white;' %></li>
            <li class="well"><%= topic.title %></li>
          </ul>
        </div>
      </div>

    </div>
    <div class="panel-body">
      <div class="well"><%= simple_format(topic.body) %></div>
      <%= link_to "アイデア新規投稿", new_topic_idea_path(topic_id: @topic), class: 'btn btn-default', style: 'color: black; background-color: #00DFE3' %>
      <span class="fa fa-comment"><%= topic.ideas.count %></span>
      <div style="float: right;">
        <% if topic.user_id == current_user.id %>
          <%= link_to edit_topic_path(id: topic.id) do %>
            <span class="fa fa-edit"></span>
          <% end %>
          <%= link_to topic_path(id: topic.id), method: :delete do%>
            <span class="fa fa-trash"></span>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="panel-footer">
      <%= render partial: 'ideas/simple', collection: @topic.ideas, as: 'idea' %>
    </div>
  </div>
</div>
