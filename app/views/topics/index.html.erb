<div class="main">
  <div class="container">
    <h1>トピック一覧</h1>
    <p><%= link_to 'トピック新規投稿', new_topic_path, class: 'btn btn-default', style: 'color: white; background-color: #00BABD' %></p>

    <div class="p-3">
      <ul class="nav nav-tabs">
        <li class="nav-item"><a href="#tab1" class="nav-link active" data-toggle="tab">All</a></li>
        <li class="nav-item"><a href="#tab2" class="nav-link" data-toggle="tab">理想</a></li>
        <li class="nav-item"><a href="#tab3" class="nav-link" data-toggle="tab">問題</a></li>
        <li class="nav-item"><a href="#tab4" class="nav-link" data-toggle="tab">その他</a></li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="tab1">
          <%= render partial: 'topics/simple', collection: @topics, as: 'topic', layout: 'topics/list_frame' %>
        </div>
        <div class="tab-pane" id="tab2">
          <%= render partial: 'topics/simple', collection: @ideal_topics, as: 'topic', layout: 'topics/list_frame' %>
        </div>
        <div class="tab-pane" id="tab3">
          <%= render partial: 'topics/simple', collection: @trouble_topics, as: 'topic', layout: 'topics/list_frame' %>
        </div>
        <div class="tab-pane" id="tab4">
          <%= render partial: 'topics/simple', collection: @other_topics, as: 'topic', layout: 'topics/list_frame' %>
        </div>
      </div>
    </div>
  </div>
</div>
