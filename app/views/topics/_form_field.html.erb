<p>
  <%= inform_validation_errror(topic) %>
</p>
<div class="container">
  <div class="form-group col-xs-4">
    <%= form_for(topic) do |f| %>
      <%= f.label :genre_id %><br>
      <%= f.select :genre_id, options_for_select({'理想': 1, '問題': 2, 'その他': 3}), {}, class: 'form-control' %><br>
      <%= f.label :title %><br>
      <%= f.text_field :title, class: 'form-control', placeholder: 'Enter new topic\'s title...' %><br>
      <%= f.label :body %><br>
      <%= f.text_area :body, class: 'form-control', placeholder: 'Enter new topic\'s body...' %><br>

      <% if request.path_info == new_topic_path %>
        <%= f.submit "投稿" ,class: 'btn btn-primary' %>
      <% else %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    <% end %>
  </div>
</div>
