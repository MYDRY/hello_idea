<h1>Topic#show</h1>
<p>
  <%= render partial: 'topics/topic', locals: { topic: @topic}, layout: 'topics/frame' %>
  <div align="right">
    created by: 
    <%= link_to @topic.user.name, user_path(id: @topic.user) %>
  </div>
  <% if @topic.user_id == current_user.id %>
    <%= link_to "edit", edit_topic_path(id: @topic.id) %>
    <%= link_to "destroy", topic_path(id: @topic.id), method: :delete %>
  <% end %>
</p>
<%= link_to "アイデア新規投稿", new_topic_idea_path(topic_id: @topic) %><br>
<p>
  <%= render partial: 'ideas/idea', collection: @topic.ideas, layout: 'ideas/frame' %>
</p>
