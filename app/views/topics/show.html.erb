<h1>Topic#show</h1>
<p>
  <%= @topic.id %>
  <%= @topic.title %>
  <%= @topic.body %>
  <%= @topic.genre_id %>
</p>
<%= link_to "アイデア新規投稿", controller: 'ideas', action: 'new',topic_id: "#{@topic.id}" %><br>
<p>
<% @topic.ideas.each do |idea| %>
  <%= link_to "#{idea.title}", topic_idea_path(@topic, idea) %><br>
<% end %>
</p>
