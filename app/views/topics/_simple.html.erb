<div class="needs-pannel">
  <div class="needs-title">
    <%=link_to topic.title, topic_path(id: topic) %>
  </div>
  <div class="needs-body">
    <%= link_to topic.body, topic_path(id: topic), style: 'width: 100%; text-align: left;' %>
  </div>
  <div class="needs-information">
    <span class="fa fa-comment"><%= topic.ideas.count %></span>
    <%= "support: #{topic.support}" %>
    <%= link_to image_tag(get_image(topic.user), size: '50', class: 'img-thumbnail'), user_path(id: topic.user) %>
    <%= link_to topic.user.name, user_path(id: topic.user), style: 'font-size: 20px; color: #007B96; font-weight: 700;' %>
  </div>
  <div class="panel-footer" style="text-align: right;">
      投稿日時：<%= format_datetime(topic.created_at) %>
      <% if topic.user_id == current_user.id %>
        <%= link_to edit_topic_path(id: topic.id) do %>
          <span class="fa fa-edit"></span>
        <% end %>
        <%= link_to topic_path(id: topic.id), method: :delete do%>
          <span class="fa fa-trash"></span>
        <% end %>
       <% end %>
    </div>
</div>