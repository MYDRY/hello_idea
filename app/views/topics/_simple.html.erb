<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

<div class="needs-panel">
  <div class="needs-content">
    <div class="needs-title">
      <%=link_to topic.title, topic_path(id: topic) %>
    </div>
    <div class="needs-body">
      <%= link_to topic.body, topic_path(id: topic), style: 'width: 100%; text-align: left;' %>
    </div>
    <div class="needs-information">
      <span class="fa fa-comment" style="color: darkorange;"><%= topic.ideas.count %><span>ideas</span></span>
      <span class="fab fa-product-hunt" style="color: #98cc31; font-weight: bold;"><%= "#{topic.support}" %><span>points</span></span>
      <span class="user-information">
        <%= link_to image_tag(get_image(topic.user), size: '25', class: 'rounded'), user_path(id: topic.user) %>
        <%= link_to topic.user.name, user_path(id: topic.user), style: 'font-size: 15px; color: #007B96; font-weight: 400;' %>
      </span>
    </div>
  </div>
  <div class="panel-footer" style="text-align: right; height: 30px; padding: 0;">
    <%= format_datetime(topic.created_at) %>
  </div>
</div>
