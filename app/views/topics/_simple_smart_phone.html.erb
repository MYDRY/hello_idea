<link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">

<div id="smart_topic_pannel">
  <% if topic.ideas.count == 0 %>
  <div class="idea-count">
    <% else %>
  <div class="idea-count2">
    <% end %>
    <%= topic.ideas.count %><br><p>アイデア</p>
  </div>
  <div class="topic-information">
    <%=link_to topic.title, topic_path(id: topic), class:'topic-title' %>
    <%= link_to topic.body, topic_path(id: topic), class: 'topic-detail' %>
    <div class="user-image">
      <%= link_to image_tag(get_image(topic.user), size: '40', class: 'img-thumbnail'), user_path(id: topic.user) %>
      <%= link_to topic.user.name, user_path(id: topic.user) %>
      <span>
      投稿日時：<%= format_datetime(topic.created_at) %>
      <% if topic.user_id == current_user.id %>
        <%= link_to edit_topic_path(id: topic.id) do %>
          <span class="fa fa-edit"></span>
        <% end %>
        <%= link_to topic_path(id: topic.id), method: :delete do%>
          <span class="fa fa-trash"></span>
        <% end %>
       <% end %>
      </span>
    </div>
  </div>
</div>