<h1>User#Show</h1>
<p>
  <h2>Profile</h2>
  <%= render partial: 'users/user', locals: { user: @user}, layout: 'users/frame' %>
</p>
<p>
  <h2>Published Topics</h2>
  <%= render partial: 'topics/topic', collection: @user.topics, locals: { show_create_user: false }, layout: 'topics/frame' %>
</p>
<p>
  <h2>Published Ideas</h2>
  <%= render partial: 'ideas/idea', collection: @user.ideas, locals: { show_create_user: false }, layout: 'ideas/frame' %>
</p>
<p>
  <h2>Liked Ideas</h2>
  <% @user.likes.each do |like| %>
    <%= render partial: 'ideas/idea', locals: { idea: like.idea, show_create_user: false }, layout: 'ideas/frame' %>
  <% end %>
</p>
