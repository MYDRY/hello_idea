<div class="main">
  <div class="container">
    <h1>ユーザー詳細</h1>
    <%= render partial: 'users/user', locals: { user: @user, image_size: 200 }, layout: 'users/detail_frame' %>
    <div class="p-3">
      <ul class="nav nav-tabs">
        <li class="nav-item"><a href="#tab1" class="nav-link active" data-toggle="tab">投稿したトピック　<span class="badge badge-primary"><%= @user.topics.count %></span></a></li>
        <li class="nav-item"><a href="#tab2" class="nav-link" data-toggle="tab">投稿したアイデア　<span class="badge badge-primary"><%= @user.ideas.count %></span></a></li>
        <li class="nav-item"><a href="#tab3" class="nav-link" data-toggle="tab">いいね　<span class="badge badge-primary"><%= @user.likes.count %></span></a></li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="tab1">
          <p>
            <%= render partial: 'topics/simple', collection: @user.topics, as: 'topic', layout: 'topics/list_frame' %>
          </p>
        </div>
        <div class="tab-pane" id="tab2">
          <p>
            <%= render partial: 'ideas/simple', collection: @user.ideas, as: 'idea', locals: { tab_name: 'pub'}, layout: 'ideas/list_frame' %>
          </p>
        </div>
        <div class="tab-pane" id="tab3">
          <p>
            <% @user.likes.each do |like| %>
              <%= render partial: 'ideas/simple', locals: { idea: like.idea, tab_name: 'like' }, layout: 'ideas/list_frame' %>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
