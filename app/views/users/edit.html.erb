<h1>User#edit</h1>
<% @user.errors.full_messages.each do |message| %>
  <div class="alert-danger">
    <%= message %>
  </div>
<% end %> 
<p>
  <%= form_for(@user) do |f| %>
    <%= f.label       :name %><br>
    <%= f.text_field  :name %><br>
    
    <%= f.label       :email %><br>
    <%= f.email_field :email %><br>

    <%= f.label       :image %><br>
    <%= f.file_field  :image %><br>
    
    <%= f.submit %>    
  <% end %>
</p>
