<div class="main">
  <h1>User#edit</h1>
  <p>
    <%= form_for(@user) do |f| %>
      <%= f.label       :name %><br>
      <%= f.text_field  :name %><br>
      
      <%= f.label       :email %><br>
      <%= f.email_field :email %><br>

      <%= f.label       :image %><br>
      <%= f.file_field  :image %><br>
      
      <%= f.submit %>    
    <% end %>
  </p>
</div>
