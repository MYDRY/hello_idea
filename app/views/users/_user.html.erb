<p>
  <div class="users-show-item">
    <% profile_image = user.image ? "/user_image/#{user.image}" : 'default_profile_image.png' %>
    <% image_size = 100 unless local_assigns[:image_size] %>
    <%= image_tag profile_image, size: "#{image_size}" %>      
    <div class="user-user-name">Name: <%= link_to_unless_current user.name, user_path(id: user) %></div>
    E-mail:  <%= user.email %><br>
    <%= link_to 'Edit', edit_user_path(id: user) if user == current_user %>
  </div>
</p>
