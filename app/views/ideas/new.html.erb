<h1>Ideas#new</h1>

<p>
  <%= form_for(@idea, url: url_for(controller: 'ideas', action: 'create')) do |f| %>
    <div class="field">
      <%= f.label :topic_id %><br />
      <%= f.label :title %><br />
      <%= f.text_field :title %><br />
      <%= f.label :body %><br />
      <%= f.text_area :body %><br />
      <%= f.submit %>
  <% end %>
    </div>
</p>
