<h1>Ideas#new</h1>
<div class="container">
  <div class="form-group col-xs-4">
    <%= form_for(@idea, url: url_for(controller: 'ideas', action: 'create')) do |f| %>
      <%= f.label      :title %><br>
      <%= f.text_field :title, class: 'form-control' %><br>
      <%= f.label      :body %><br>
      <%= f.text_area  :body, class: 'form-control' %><br>
      
      <%= f.submit class: 'btn btn-primary'%>
    <% end %>
  </div>
</div>
