<h1>Ideas#edit</h1>
<p>
  <% @idea.errors.full_messages.each do |message| %>
    <%= message %><br>
  <% end %>
</p>
<div class="container">
  <div class="form-group col-xs-4">
    <%= form_for(@idea) do |f| %>
      <%= f.label :title %><br>
      <%= f.text_field :title, class: 'form-control'%><br>
      <%= f.label :body %><br>
      <%= f.text_area  :body, class: 'form-control' %><br>

      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
