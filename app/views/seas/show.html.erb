<div class="main">
  <div class="container">
    <div class="ideas-pannel">
      <% if @random_words %>
        「<%= @random_words.word1.word %>　×　<%= @random_words.word2.word %>」
      <% end %>
      <br>
      <%= @sea.body %>
      <br>
      <%= link_to image_tag(get_image(@sea.user), size: '38', class: 'img-thumbnail'), user_path(id: @sea.user) %>
      <%= link_to @sea.user.name, user_path(id: @sea.user), style: 'font-size: 20px; color: #007B96; font-weight: 500;', class:'user-name' %>
    </div>
    <br>
    <%= link_to "アイデアの海に戻る", seas_path %>
  </div>
</div>
