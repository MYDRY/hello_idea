<nav class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">Hello Idea</a>
    </div>
    <ul class="nav navbar-nav navbar-right" style="display: inline;">
      <% if logged_in? %>
        <li><%= link_to current_user.name, user_path(id: current_user) %></li>
        <li><%= link_to 'トピック一覧', topics_path %></li>
        <li><%= link_to 'ユーザ一覧', users_path %></li>
        <li>
          <%= link_to user_notices_path(user_id: current_user) do %>
            <% unread_notices = current_user.notices.where(has_read: false) %>
            <% unless unread_notices.empty? %>
              通知
              <span class="icon badge badge-danger">
                <%= unread_notices.count %>
              </span>
            <% end %>
          <% end %>
        </li>
        <li><%= link_to 'ログアウト', logout_path %></li>
      <% else %>
        <li><%= link_to 'ログイン', login_path %></li>
        <li><%= link_to '新規登録', new_user_path %></li>
      <% end %>
    </ul>
  </div>
</nav>
<% flash.each do |type, msg| %>
  <div class="alert alert-<%= type %>" style="margin: -20px 0px 10px; padding: 15px 100px 15px; ">
    <a class="close" data-dismiss="alert">×</a>
    <%= msg %>
  </div>
<% end %>
