<div style="background-color: #006E6F; position: fixed; width: 100%; z-index: 999;">
  <div class="pad">
    <div class="header">
      <div class="header-brand"><a href="/">Hello Idea</a></div>
      <div class="header-list">
        <% if logged_in? %>
          <div><%= link_to current_user.name, user_path(id: current_user) %></div>
          <div><%= link_to 'SNS', topics_path %></div>
          <div><%= link_to 'ツール', tools_path %></div>
          <% if current_user.admin? %><div><%= link_to 'ユーザーリスト', users_path %></div><% end %>
          <div><%= show_notice_link %></div>
          <div><%= link_to 'アンケート', 'https://goo.gl/forms/QrNsbvBYoYa6WB7N2', style: "color: #ff9190;"%></div>
          <div><%= link_to 'ログアウト', logout_path %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="ne-space" style="height: 70px;"></div>

<% flash.each do |type, msg| %>
  <div class="alert alert-<%= type %>" style="margin: 0px 0px 0px; padding: 15px 100px 15px; ">
    <a class="close" data-dismiss="alert">×</a>
    <%= msg %>
  </div>
<% end %>

